  <div class="w3-container w3-content" style="max-width: 1400px; margin-top: 80px">
    <!-- The Grid -->
    <div class="w3-row">
      <!-- Left Column -->
      <div class="w3-col m3">
        <!-- Profile -->
        <div class="w3-card w3-round w3-white">
          <div class="w3-container">
            <h5 class="w3-center">Join McMurray's Fine Wines</h5>
            <img src="/assets/wine-logo.png" alt="wine" width="100%" height="100%">
          </div>
        </div>
        <br />
        <!-- End Left Column -->
      </div>

      <!-- Middle Column -->
      <div class="w3-col m6" style="padding: 12px;">
        <p style="width: 100%; align-items: left; padding-left: 15px; ">
